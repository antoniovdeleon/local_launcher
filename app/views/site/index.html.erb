
<div class="jumbotron">
	<div class="container-fluid">
    <!-- CJ: it's best to use margin or padding rather than a ton of page breaks :) -->
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>	
		<br>
		<br>	
		<br>
		<div class="col-md-7">
		<div class id="jumbotron_box">
		<h1>LocalLauncher</h1>
		<br>
		<p>Introducing local businesses that are about to open up around you</p>
	</div>
	</div>
</div>
</div>
<div class="container">
<div class="row">
  <div class="col-md-6">
    <h2><center>Businesses</center></h2>
    <hr>
    <% if @businesses %>
      <% @businesses.each do |business| %>
        <h4>
          <h4><%= image_tag business.avatar.url(:thumb)%>&nbsp&nbsp<%= link_to business.business_name, business_path(business) %>
          <a href="javascript:void(0)" class="follow" data-id="<%= business.id %>">
            <!-- check if current_user has already favorited recipe to show correct star icon -->
            <% if current_user %>
              <% if current_user.follow_businesses.include? business %>
                <span class="glyphicon glyphicon-star"></span>
              <% else %>
                <span class="glyphicon glyphicon-star-empty"></span>
              <% end %>
            <% end %> 
          </a>
          <span class="small">&nbsp;&nbsp;&nbsp;&nbsp;
          	&nbsp;&nbsp;&nbsp;&nbsp;<strong>Started on </strong><%= business.created_at.strftime("%b %d %Y") %></span></h4>
        </h4>
        <p><strong>Opening soon at </strong><%= business.address %></p>

        <p><%= business.introduction %></p>
        <hr>
      <% end %>
    <% else %>
      <p><center>No businesses yet!</center></p>
      <hr>
    <% end %>
    <center class="well">
		<p>Do you have a business that's about to open up?</p>
     <%= link_to "Add Your Business", new_business_path, class: "btn btn-default" %>
   </center>
  </div>



  <div class="col-md-6">
  	<h2><center>Deals</center></h2>
  	<hr>
	  	<div>
	  		<% if @deals.any? %>
	  			<% @deals.each do |deal| %>
			  		<div class="row">
			  			<div class="panel-body">
			  				<div class="col-md-4">
			  					<br>

			  						<%= image_tag deal.avatar.url(:medium), class:"pull-left" %>

			  				</div>
			  				<div class="col-md-6">
			  					<h4><%= link_to deal.name, business_path(deal.business) %>
			  					</h4>
			  						<p class="help-block"><%= deal.name2 %></p>
			  						<p>by <%= deal.business.business_name %></p>
			  						<br>

			  						<p><%= deal.details %></p>
			  						<br>
			  				</div>
			  				<div class="col-md-2">
			  					<h4><span class="">$<%= deal.price %></span></h4>
		  					<p class="help-block"><span class="">$<%= deal.value %> value</span></p>
			  					<br>
			  					<button class="btn btn-primary">Buy!</button>
			  				</div>
			  			</div>
			  			<hr>
			  		</div>
		  		<% end %>
		  	<% else %>
		  		<div class="row">
		  			<div class="panel-body">
		  				<div class="col-md-12">
		  					<h4><center>No deals are currently available <p class="help-block">Don't miss out, make sure to check again soon!</p></center></h4>
		  				</div>
		  			</div>
		  		</div>
	  		<% end %>
	  	</div>
  	<% if @deals %>
  		<% @deals.each do | deals | %>
  		<% end %>
  	<% end %>
  </div>
</div>


