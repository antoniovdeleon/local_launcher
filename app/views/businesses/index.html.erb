<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Businesses</h1>
    <hr>
    <% if @businesses.any? %>
      <% @businesses.each do |business| %>
        <h4>
          <%= business.business_name %>
          <span class="pull-right">
            <%= link_to "View Business", business_path(business), class: "btn btn-default pull-right" %>
          </span>
        </h4>
        <p><%= business.introduction %></p>
        <p>
          <a href="javascript:void(0)" class="favorite" data-id="<%= business.id %>">
            <!-- check if current_user has already favorited recipe to show correct star icon -->
            <% if current_user %>
              <% if current_user.follow_businesses.include? business %>
                <span class="glyphicon glyphicon-star"></span>
              <% else %>
                <span class="glyphicon glyphicon-star-empty"></span>
              <% end %>
            <% end %> 
          </a>
        </p>
        <hr>
      <% end %>
    <% else %>
      <p>No businesses yet!</p>
      <hr>
    <% end %>
		<p>Do you have a business that's about to open up?</p>
     <%= link_to "Add Your Business", new_business_path, class: "btn btn-default" %>
  </div>
</div>